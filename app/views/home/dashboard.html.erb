<body>
    <h3>Welcome to the Admin dashboard</h3>
    <p> Use yeah search bar below to search through all the users who are registered.
    Keep the search bar empty if you want to display all the registered users</p>
    <div class="container">
    <div class="row">
        <div class="col-md-12">
        <%= form_tag home_dashboard_path, method: :get, class: "form-inline my-2 my-lg-0" do %>
            <div class="form-group">
            <%= text_field_tag :search, params[:search], placeholder: "Search Users", class: "form-control mr-sm-2" %>
            <br/>
            <%= submit_tag "Search", class: "btn btn-primary my-2 my-sm-0" %>
            </div>
        <% end %>
        </div>
        <br/>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-12">
        <table class="table table-striped table-hover table-bordered bg-light">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Admin</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td><%= user.created_at %></td>
                    <td><%= user.updated_at %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
        </div>
    </div>
    </div>
</body>