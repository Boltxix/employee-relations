<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form>
  <div class="mb-3">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :email, class:"form-control", placeholder:"email@email.com" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :phone, class:"form-control", placeholder:"081234567" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :position, class:"form-control", placeholder:"Developer etc.." %>
  </div>

  <div class="mb-3">
    <%= form.number_field :user_id, id: :employee_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>
  <div>
    <%= form.submit class:"btn btn-primary" %>
  </div>
<form>
<% end %>
